<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clommunicate.main"
    android:versionCode="2"
    android:versionName="Raw Incompleteness" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="10" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar" >
        <activity
            android:name=".AuthActivity"
            android:launchMode="singleTask"
            android:clearTaskOnLaunch="true"
            android:windowSoftInputMode="stateHidden"  
            android:label="@string/title_activity_auth">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegistrationActivity"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.REGISTER" />

                <category android:name="android.intent.category.AUTH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserActivity"
            android:windowSoftInputMode="stateHidden"  >
            <intent-filter>
                <action android:name="android.intent.action.USER" />

                <category android:name="android.intent.category.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewProjectActivity"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.NEW_PROJECT" />

                <category android:name="android.intent.category.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TaskActivity"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.TASK" />

                <category android:name="android.intent.category.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewTaskActivity"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.NEW_TASK" />

                <category android:name="android.intent.category.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProjectListActivity"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.PROJECT_LIST" />

                <category android:name="android.intent.category.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProjectActivity"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.PROJECT" />

                <category android:name="android.intent.category.MAIN" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

</manifest>