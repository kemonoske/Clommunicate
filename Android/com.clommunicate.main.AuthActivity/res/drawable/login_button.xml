<?xml version="1.0" encoding="utf-8"?>
 <selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Inactive button -->
    <item android:drawable="@drawable/ok_btn_inactive" android:state_enabled="false"/>
    <!-- Pressed button -->
    <item android:drawable="@drawable/ok_btn_pressed" android:state_pressed="true"/>
    <!-- Selected button (using d-pad) -->
    <item android:drawable="@drawable/ok_btn_selected" android:state_focused="true"/>
    <!-- Active Button -->
    <item android:drawable="@drawable/ok_btn_norm"/>
</selector>