<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/member_list_item_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@drawable/border_2dp"
            android:padding="2dp"
            android:src="@drawable/photo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/member_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:shadowColor="#FFFFFF"
                android:shadowDx="2"
                android:shadowDy="-1"
                android:shadowRadius="2"
                android:text="Sample"
                android:textColor="#6c6b68"
                android:textColorHighlight="#6c6b68"
                android:textSize="35dp"
                android:textStyle="normal" >
            </TextView>

            <TextView
                android:id="@+id/member_list_item_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:shadowColor="#FFFFFF"
                android:shadowDx="2"
                android:shadowDy="-1"
                android:shadowRadius="2"
                android:text="Sample"
                android:textColor="#6c6b68"
                android:textColorHighlight="#6c6b68"
                android:textSize="25dp"
                android:textStyle="normal" >
            </TextView>
        </LinearLayout>

        <ImageButton
            android:id="@+id/member_list_item_remove_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/exit_button"
            android:scaleType="fitXY" />
    </LinearLayout>

</LinearLayout>