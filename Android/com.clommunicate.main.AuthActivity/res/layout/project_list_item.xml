<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="horizontal"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/border_2dp"
        android:fadingEdgeLength="2px"
        android:gravity="center_vertical|center_horizontal"
        android:padding="1dp" >

        <TextView
            android:id="@+id/project_list_item_day_count"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="#6c6b68"
            android:fadingEdge="horizontal|vertical"
            android:fadingEdgeLength="2dp"
            android:gravity="center_horizontal|center_vertical"
            android:shadowColor="#000000"
            android:shadowRadius="4"
            android:text="9999"
            android:textColor="#f1eef4"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/project_list_item_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="100"
                android:paddingLeft="10dp"
                android:text="Project Name"
                android:textColor="#6c6b68"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/project_list_item_quit_project_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/quit_button"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <ImageButton
                android:id="@+id/project_list_item_remove_project_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/exit_button"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="#6c6b68" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="90" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="30"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/project_list_item_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="26.12.2012"
                    android:textColor="#6c6b68"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/project_list_item_start_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Start Date"
                    android:textColor="#6c6b68"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#6c6b68" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="30"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/project_list_item_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="26.12.2013"
                    android:textColor="#6c6b68"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/project_list_item_deadline_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Deadline"
                    android:textColor="#6c6b68"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#6c6b68" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="30"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/project_list_item_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="N/A"
                    android:textColor="#6c6b68"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/project_list_item_end_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Finished On"
                    android:textColor="#6c6b68"
                    android:textSize="15dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>