<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/task_list_item_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="2dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/task_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:shadowColor="#FFFFFF"
                android:shadowDx="2"
                android:shadowDy="-1"
                android:shadowRadius="2"
                android:text="Sample"
                android:textColor="#6c6b68"
                android:textColorHighlight="#6c6b68"
                android:textSize="15sp"
                android:textStyle="normal" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/task_list_item_notification"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/border"
            android:paddingLeft="1dp"
            android:visibility="gone" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/new_comments_icon" />

            <TextView
                android:id="@+id/task_list_item_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/border"
                android:enabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="6dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="17sp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/task_list_item_finished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp" />
    </LinearLayout>

</LinearLayout>